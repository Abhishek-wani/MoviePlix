<%- include('../partials/header') %>
<title>Top 250</title>

<link rel="stylesheet" href="/css/entire.css">
<meta charset="utf-8">
<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

<link href='https://fonts.googleapis.com/css?family=Roboto:400,100,300,700' rel='stylesheet' type='text/css'>

<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">

<link rel="stylesheet" href="css/watchlist.css">



<%- include('../partials/navbar') %>


<% let i=0, k=0; %> 
<section class="ftco-section">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6 text-center mb-5">
                <h2 class="heading-section">TOP 250 MOVIES</h2>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="table-wrap">
                    <table class="table table-responsive-xl">
                      <thead>
                        <tr>
                            <th>Sr.No.</th>
                            <th>Name</th>                          
                          <th>Rating</th>                         
                        </tr>
                      </thead>
                      <tbody>
                        
                        <% for(l of list){ %> 
                          <form action="/edit" class="form" method="post">  
                          <input type="hidden" name="mid" value="<%= l.m_id %>"/>                    
                          <tr class="alert" role="alert">
                            <td>
                                <%= ++i %> 
                                <% k++ %>                                
                            </td>
                          <td class="d-flex align-items-center">
                            <a href="/movies/<%= l.id %>"><div class="img" style="background-image: url('<%= l.image %>');"></div></a>
                              <div class="pl-3 email">
                                <a href="/movies/<%= l.id %>"><%= l.fullTitle %> </a>
                              </div>
                          </td>                          
                          <td><%= l.imDbRating %></td>
                        </tr>
                           
                                 
                      
                        <% } %> 
                      </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>
<div class="mobile pl-2 pt-2">
  <h3 class="mobile-title text-center">Top 250 Movies</h3>
    <ol>
    <% for(l of list){ %> 
        <li>
            <a href="/movies/<%= l.id %>">
                <%= l.fullTitle %>(<i class="fa-solid fa-star mobile-title"> <%= l.imDbRating %></i>) 
            </a>
        </li>
    <% } %> 
    </ol>
</div> 


<script src="/js/watchlist.js"></script>
<%- include('../partials/footer') %>